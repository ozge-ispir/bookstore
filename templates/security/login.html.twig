{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}

{% block body %}

<div class="container mt-4">

    {% if error %}

        <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security') }}</div>

    {% endif %}
    <form action="{{ path('login')}}" method="post">
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input placeholder="Adresse email" id="username" required name="_username" type="text" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input placeholder="Mot de passe" id="password" required name="_password" type="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
</div>

{% endblock %}
